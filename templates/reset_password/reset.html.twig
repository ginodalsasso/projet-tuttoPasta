{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block page_title %} Confirmation de mot de passe {% endblock %}

{% block body %}
    {{ parent() }}{# Inclus le "page_title" ainsi que les propriétés du header #}
    <main class="wrapper">
        {{ form_start(resetForm) }}
            <div class="form_container">
                <div class="form-group">
                    {{ form_row(resetForm.plainPassword) }}
                    <div class="error_msg" id="password_error"></div>
                </div>
                <button id="pass_confirm" class="full_button_black">Changer mon mot de passe</button>
            </div>
        {{ form_end(resetForm) }}
    </main>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('/js/login.js')}}"></script>
{% endblock %}
