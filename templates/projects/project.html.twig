{% extends 'base.html.twig' %}

{% block head %}
    {{ parent() }} {# Etend le block head défini dans le layout  #}
    <meta property="og:title" content="{{ project.projectName }}" />
    <meta property="og:url" content="{{ app.request.uri }}" />
    <meta property="og:language" content="fr">
    <meta property="og:image" content="{{ asset('img/projects/' ~ project.images[0].image) }}" />
    <meta property="og:type" content="article" />
{% endblock %}

{% block title %}{{project.projectName}}{% endblock %}

{% block page_title %} {{project.projectName}} {% endblock %}

{% block body %}
    {{ parent() }}{# Inclus le "page_title" ainsi que les propriétés du header #}
    <main class="wrapper_project">
        <section id="project_container">
            <div class="project_header">
                {% for image in project.images[:2] %}
                    <img src="{{ asset('img/projects/' ~ image.image) }}" alt="{{ image.alt }}" loading="lazy" />
                {% endfor %}
                <div class="project_details">
                    <h2>{{ project.projectTitle }}</h2>
                    {% for category in project.categories %}
                        <i class="fa-sharp fa-solid fa-arrow-right" style="color: #ffffff;"></i>
                        {{ category.categoryName }}
                    {% endfor %}
                </div>
                
                {{project.projectContent}}
            </div>
            <div class="project_gallery">
                {% for image in project.images[2:5] %}
                    <img src="{{ asset('img/projects/' ~ image.image) }}" alt="{{ image.alt }} loading="lazy"" />
                {% endfor %}
            </div>

            <hr class="separator">

            <div id="social_share_projects" class="social_share">
                <p>Partager : </p>
                <a href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.uri }}" class="social_icons" target="_blank">
                    <i class="fa-brands fa-square-facebook fa-xl" style="color: #ffffff;"></i>
                </a>
                <a href="https://https://www.instagram.com/share/url/?url={{ app.request.uri }}" class="social_icons" target="_blank">
                    <i class="fa-brands fa-square-instagram fa-xl" style="color: #ffffff;"></i>
                </a>
                <a href="https://x.com/intent/post?url={{ app.request.uri }}" class="social_icons" target="_blank">
                    <i class="fa-brands fa-square-x-twitter fa-xl" style="color: #ffffff;"></i>
                </a>
                <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ app.request.uri }}" class="social_icons" target="_blank">
                    <i class="fa-brands fa-linkedin fa-xl" style="color: #ffffff;"></i>
                </a>
            </div>
            <hr class="separator">
        </section>
    </main>

{% endblock %}
