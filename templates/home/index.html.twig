{% extends 'base.html.twig' %}

{% block title %}Tutto Pasta{% endblock %}

{% block page_title %}
    {{administrations[0].title}}
    {{administrations[0].textContent}}
    <a href="#services_section"><button class="full_button_white">Accéder aux services</button></a>
{% endblock %}

{% block body %}
    {{ parent() }}{# Inclus le "page_title" ainsi que les propriétés du header #}
    <main class="wrapper">
        <section id="introduction_section">
            <span class="stickers_pink">Le studio</span>
            <img src="{{administrations[21].title}}" alt="{{administrations[21].textContent}}">
            {{administrations[1].title}} {{administrations[1].textContent}} 
            <a href="{{ path('app_appointment') }}"><button class="full_button_black">Prendre rdv</button></a>
        </section>









        <section id="guide_section">
        </section>
        <section id="expertise_section">
        </section>
        <section id="projects_section">
        </section>
        <section id="services_section">
        </section>

        {{dump(administrations)}}
        {% for project in projects %}
            {{project.projectName}} <br>
            {{project.projectContent}}
        {% endfor %}


        <h1>Liste des images</h1>
        {% for projectImg in projectImgs %}
            {{projectImg.image}}
        {% endfor %}

        <h1>Liste des services</h1>
        {% for service in services %}
            {{service}}
            {{service.serviceContent}}
            {{service.servicePrice}}
        {% endfor %}
    </main>

{% endblock %}
