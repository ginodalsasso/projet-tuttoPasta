{% extends 'base.html.twig' %}

{% block title %}Liste des devis{% endblock %}

{% block page_title %} Liste des devis {% endblock %}

{% block body %}
    {{ parent() }}{# Inclus le "page_title" ainsi que les propriétés du header #}
    <main class="wrapper">
        <div class="quotes_container">
            <table class="quotes_table">
                <thead>
                    <tr>
                        <th>Référence</th>
                        <th>Date</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Etat</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% set sorted_quotes = quotes|sort((a, b) => b.quoteDate <=> a.quoteDate) %}
                    {% for quote in sorted_quotes %}
                        <tr id="quote-{{ quote.id }}">
                            <td>{{ quote.reference }}
                                <a href="{{ path('quote_pdf', { 'id': quote.id }) }}" title="Aperçu"> {# Lien vers la génération du PDF #}
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                            </td>
                            <td>{{ quote.quoteDate|date('d-m-Y') }}</td>
                            <td>{{ quote.customerName }}</td>
                            <td>{{ quote.customerEmail }}</td>
                            <td>{{ quote.state }}</td>
                            <td id="action_quote_buttons">

                                <a href="{{ path('quote_edit', { 'id': quote.id }) }}" title="Editer"> {# Lien vers l'édition du PDF #}
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a href="#" class="archive_quote" data-id="{{ quote.id }}" title="Archiver"> {# Lien vers l'archivage du PDF #}
                                    <i class="fa-solid fa-box-archive"></i>
                                </a>
                                <a href="#" class="completed_quote" data-id="{{ quote.id }}" title="Terminé"> {# Lien vers l'archivage du PDF #}
                                    <i class="fa-solid fa-check"></i>
                                </a>
                                <a href="#" class="delete_quote" data-id="{{ quote.id }}" title="Supprimer"> {# Lien vers la suppression du PDF #}
                                    <i class="fa-solid fa-x"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="back_to">
            <a class="full_button_white" href="{{ path('app_home') }}">Retour à la page d'accueil</a> 
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('/js/quote.js')}}"></script>
{% endblock %}
